# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Secret (Change in production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Database Configuration
# Choose ONE database option:

# Option 1: Firebase Firestore (NoSQL)
FIREBASE_PROJECT_ID=kotapal-1e8f6
GOOGLE_APPLICATION_CREDENTIALS=./firebase-key.json
# OR use base64 encoded key for deployment:
# FIREBASE_ADMIN_SDK_KEY=base64-encoded-key

# Option 2: Supabase (PostgreSQL)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-supabase-service-role-key
SUPABASE_ANON_KEY=your-supabase-anon-key

# If neither is configured, app uses local JSON database

# Affiliate API Keys
AMAZON_ACCESS_KEY=your-amazon-access-key
AMAZON_SECRET_KEY=your-amazon-secret-key
AMAZON_PARTNER_TAG=your-amazon-partner-tag

WALMART_API_KEY=your-walmart-api-key

SHOPIFY_STORE_URL=https://your-store.myshopify.com
SHOPIFY_ACCESS_TOKEN=your-shopify-access-token

SKIMLINKS_API_KEY=your-skimlinks-api-key

# AI Configuration
OPENAI_API_KEY=your-openai-api-key

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Email Configuration (Gmail SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-gmail@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourdomain.com

# Frontend URL
FRONTEND_URL=http://localhost:3001
BASE_URL=http://localhost:3000
